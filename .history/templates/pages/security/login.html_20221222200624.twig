{% extends 'base.html.twig' %}

{% block title %}SupaMarket - Connexion{% endblock %}

{% block body %}
   {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="container">
<h1 class="mt-4">Formulaire de connextion</h1>

<form action="{{path('security.login')}}" method="POST">
    <div class="form-group">
      <label for="username" class="form-label mt-4">Adresse email</label>
      <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="votremail@gmail.com" value="{{ last_username }}">
     
    </div>
    <div class="form-group">
      <label for="password" class="form-label mt-4">Mot de passe</label>
      <input type="password" class="form-control" id="password" name="_password" placeholder="********">
    </div>
    <button type="submit" class="btn btn-primary mt-4
    ">
    Se Connnecter
    </button>
</form>

</div>
{% endblock %}
